<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myprepare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ThreadTestActivity"></activity>
        <activity android:name=".activity.ViewActivity" />
        <activity android:name=".activity.OkHttpActivity" />
        <activity android:name=".activity.RetrofitActivity" />
        <activity android:name=".activity.ServiceTestActivity" />
        <activity android:name=".activity.FragmentTestActivity" />
        <activity android:name=".activity.RecyclerTestActivity" />
        <activity android:name=".activity.AdaptationActivity" />
        <activity android:name=".activity.ResTestActivity" />
        <activity android:name=".activity.DrawerLayoutActivity" />
        <activity android:name=".activity.EditTextActivity" />
        <activity android:name=".activity.ViewSizeActivity" />
        <activity
            android:name=".activity.Rxjava2Activity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>